<body>
    <form method="get" action="~/Home/ForgetPassword">


        <div id="preloader">
            <div id="status">
                @* <img src="~/images/preloader.gif" height="64" width="64" alt="">*@
            </div>
        </div>

        <!-- Header
        ================================================== -->
        <header>

            @*<div class="logo">
                   <a class="smoothscroll" href="#hero"><img alt="" src="~/images/logo.png"></a>
                </div>*@

            <nav id="nav-wrap">

                <a class="mobile-btn" href="#nav-wrap" title="Show navigation">Show Menu</a>
                <a class="mobile-btn" href="#" title="Hide navigation">Hide Menu</a>

                <ul id="nav" class="nav">


                    <li><img alt="" src="~/images/White_on_black_background_192x75.png" alt="" width="200" height="50"></li>

                    <li>  @Html.ActionLink("Home", "Index", "Home/Index") </li>

                </ul> <!-- end #nav -->

            </nav> <!-- end #nav-wrap -->



        </header> <!-- Header End -->

        <section id='login'>


            <div class="row section-head">


                <h1>Reset Your Password</h1>



            </div>


            @{
                var abc = ViewData["err1"].ToString();
                var abc1 = ViewData["err2"].ToString();
                var abc2 = ViewData["sucess"].ToString();
            }
            <table id=table1 style="margin-left:400px">
                <tr><td>Enter Your Email: <input type="email" required name="email" value=" " /></td></tr>
                <tr><td style="color:red;">@abc</td></tr>
                <tr><td>Enter Your Secondary_Email: <input required type="email" name="semail" value=" " /></td></tr>
                <tr><td style="color:red;">@abc1</td></tr>
                <tr><td><input type="submit" name="Continue" value="Continue" /></td></tr>
                <tr><td style="color:green;">@abc2</td></tr>
            </table>



        </section>


        <!-- Java Script
        ================================================== -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/jquery-1.10.2.min.js"><\/script>')</script>
        <script type="text/javascript" src="js/jquery-migrate-1.2.1.min.js"></script>

        <script src="~/Scripts/jquery.flexslider.js"></script>
        <script src="~/Scripts/waypoints.js"></script>
        <script src="~/Scripts/jquery.fittext.js"></script>
        <script src="~/Scripts/jquery.fitvids.js"></script>
        <script src="~/Scripts/imagelightbox.js"></script>
        <script src="~/Scripts/jquery.prettyPhoto.js"></script>
        <script src="~/Scripts/main.js"></script>
    </form>
</body>
